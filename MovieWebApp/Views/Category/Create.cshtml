@model Category

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
                Create Category
            </h2>
        </div>
        <div class="mb-3">
            <label>İsim</label>
            <input asp-for="Name" class="form-control" /> 
        </div>
        <div class="mb-3">
            <label>Sıra</label>
            <input asp-for="DisplayOrder" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Oluştur</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">Geri Dön</a>
    </div>
</form>